extends layout

block content
  head
    a(href="../public/stylesheets/style.css")

  body
    h1 Update Book

    include ./errors.pug
    form(action="/books/" + book.id + "?_method=PUT", method="post")
      p
        label(for="title") Title
        input(name="title", type="text", id="title", value=book.title)
      p
        label(for="author") Author
        input(name="author", type="text", id="author", value=book.author)
      p
        label(for="genre") Genre
        input(name="genre", type="text", id="genre", value=book.genre)
      p
        label(for="year") Year
        input(name="year", type="text", id="year", value=book.year)
      p
        input(type="submit", value="Update Book")
    form(method='post', action='/books/' + book.id + "?_method=DELETE", onsubmit="return confirm('OK to delete? This cannot be undone');")
      p
        a.button(href="/books") Cancel
      p
        input(type="submit", value="Delete Book")




      each book in books
        tr
          td= book.title
          td= book.author
          td= book.genre
          td= book.year
