extends layout

block content
  head
    a(href="../public/stylesheets/style.css")

  body
    h1 Books
    p
    a.button(href="/books/new-book") Create New Book
    table
      th
        tr
          th Title
          th Author
          th Genre
          th Year

      each book in books
        tr
          td= book.title
          td= book.author
          td= book.genre
          td= book.year
