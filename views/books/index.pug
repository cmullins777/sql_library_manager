extends layout

block content

  body
    h1 Books
    p
      a.button(href="/books/new-book") Create New Book
    table
      thead
          tr
            th Title
            th Author
            th Genre
            th Year

          each book in books
            tr
              td= book.title
                a(href="/books/" + book.id)
                                              |
                                              em    update&curarr;
                                              |

              td= book.author
              td= book.genre
              td= book.year
